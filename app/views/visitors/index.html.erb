<p id="notice"><%= notice %></p>

<h1>Visitors</h1>

<table>
  <thead>
    <tr>
      <th>Your full name</th>
      <th>Your email address</th>
      <th>Purpose of visit</th>
      <th>Photo url</th>
      <th>Host</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.your_full_name %></td>
        <td><%= visitor.your_email_address %></td>
        <td><%= visitor.purpose_of_visit %></td>
        <td><%= visitor.photo_url %></td>
        <td><%= visitor.host %></td>
        <td><%= visitor.location_id %></td>
        <td><%= link_to 'Show', visitor %></td>
        <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
        <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


.wrapper
  = simple_form_for(@visitor) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
    .field
      = f.label "Visitor Type"
      = f.select :purpose_of_visit, ['Visitor'], required: true, input_html: { class:"input" }
    .field
      = f.label "Arrival Date"
      = f.date_field :sign_in_time, required: true, input_html: { class:"input" }
    .field
      = f.input :your_full_name, required: true, input_html: { class:"input" }
    .field
      = f.input :your_email_address, required: true, input_html: { class:"input" }
    .field
      = f.label "Host"
      = f.collection_select :user_id, @_current_location.users.order(:full_name).uniq, :id, :full_name, include_blank: false
    .field
      = f.label :photo_url
      = f.file_field :photo_url, id: :photo_url
    .field
      = f.input :private_notes
    .form-actions
      = f.button :submit

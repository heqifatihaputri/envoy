<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= render "#{resource.current_step}_step", f: f %>

  <div class="actions">
    <p><%= f.submit "Continue" %>
        <%= f.submit "Back", :name => "back_button" unless resource.first_step? %></p>
  </div>
<% end %>

<%= render "devise/shared/links" %>

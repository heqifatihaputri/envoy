<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: employees_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.input :full_name, autofocus: true, autocomplete: "full_name" %>
  </div>

  <div class="field">
    <%= f.input :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.input :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

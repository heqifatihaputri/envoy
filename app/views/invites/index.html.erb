<div class="wrapper">
<p id="notice"><%= notice %></p>

<h1>Invites</h1>

<div class="search">
  <%= form_tag invites_path, :method => 'get' do %>
  <%= label_tag(:search, "") %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "Searching Invites" %>
      <%= submit_tag "Search" %>
    </p><br>
  <% end %>
</div>

<div>
  <%= form_tag invites_path, :method => 'get' do %>
  <%= label_tag(:date, "") %>
    <p>
      <%= date_field_tag :date, params[:date] %>
      <%= submit_tag "Submit" %>
    </p><br>
  <% end %>
</div>

<%= link_to "Export", invites_path(format: "xlsx"), class: 'small-button' %>

<table width="100%">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Location id</th>
      <th>Arrival</th>
      <th>Visitor Email Address</th>
      <th>Host</th>
      <th>Sign in time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><b><%= link_to invite.full_name, edit_invite_path(invite) %></b></td>
        <td><%= invite.location.company_name %></td>
        <td><%= invite.arrival.strftime("%e %b %Y %H:%M:%S%p") %></td>
        <td><%= invite.email_visitor %></td>
        <td><%= invite.user.full_name %></td>
        <td>
          <% if invite.signed_in? %>
            <%= invite.sign_in_time.strftime("%e %b %Y %H:%M:%S%p") %>
          <% else %>
            Not yet
            <td><%= link_to 'Sign In', invite_signed_in_path(invite), method: :put  %>
                <%= link_to 'Delete Invite', invite, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          <% end %>
        </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>

<%= link_to 'Bulk create invites'%>
</div>